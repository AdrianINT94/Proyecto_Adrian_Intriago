<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
			xmlns:fx="http://javafx.com/fxml"
			fx:controller="com.hito2.proyecto.controller.AlumnosViewController">
			<top>
				<Label text="Gestion de Alumnos"
				BorderPane.alignment="CENTER"
				style="-fx-font-size: 18px; -fx-padding:10;"/>
			</top>
			
			<center>
			<TableView fx:id="tablaAlumnos">
				<columns>
					<TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
					<TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
					<TableColumn fx:id="colCiclo" text="Ciclo" prefWidth="100"/>
					<TableColumn fx:id="colCurso" text="Curso" prefWidth="80"/>
					
				</columns>
			</TableView>
		</center>
			
			<bottom>
			<HBox spacing="10"
				alignment="CENTER"
				style="-fx-padding:10;">
				<Button text="Nuevo" onAction="#nuevoAlumno"/>
				<Button text="Editar" onAction="#editarAlumno"/>
				<Button text="Eliminar" onAction="#eliminarAlumno"/>
				<Button text="Volver" onAction ="#volver"/>
				
			</HBox>
		</bottom>
			
			
			
</BorderPane>
 